---
layout: 'layouts/base.njk'
---

<article class="blog-post-full">
  <h1>{{ title }}</h1>
  {% if date %}
  <p class="post-meta">
    Published on <time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
  </p>
  {% endif %}
  <hr style="border: none; border-top: 1px solid #444; margin: 30px auto; width: 70%;">

    {% set generated_toc = content | toc %}
    {% if generated_toc and generated_toc | length > 0 %}
      <aside class="toc-container" aria-labelledby="toc-heading">
        <h2 id="toc-heading">Table of Contents</h2>
        {{ generated_toc | safe }}
      </aside>
    {% endif %}

  {{ content | safe }}
</article>

<p style="margin-top: 40px; text-align: center;">
  <a href="/blog/">&larr; Back to Blog List</a> {# Link back to blog index #}
</p>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": "{{ title }}",
  "description": "{{ description }}",
  {% if image -%}
  "image": "https://aryan-gupta.is-a.dev{{ image | url }}",
  {%- endif %}
  "datePublished": "{{ page.date.toISOString() }}",
  "author": {
    "@type": "Person",
    "name": "Aryan Gupta"
  }
}
</script>